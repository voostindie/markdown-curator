<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.methvin.watcher" level="warn"/>

    <root level="off">
        <appender-ref ref="stdout"/>
    </root>
</configuration>